<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="net.abbht.lamo.persistence.loans.Payment"
        table="PAYMENT"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Payment.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="fine"
            type="int"
            update="true"
            insert="true"
            column="fine"
        />

        <property
            name="paidto"
            type="java.lang.String"
            update="true"
            insert="true"
            column="paidto"
        />

        <property
            name="describ"
            type="java.lang.String"
            update="true"
            insert="true"
            column="describ"
        />

        <property
            name="daysfor"
            type="int"
            update="true"
            insert="true"
            column="daysfor"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="username"
        />

        <property
            name="date"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="date"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Payment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
