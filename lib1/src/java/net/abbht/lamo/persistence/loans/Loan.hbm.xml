<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="net.abbht.lamo.persistence.loans.Loan"
        table="LOAN"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Loan.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="returndate"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="returndate"
        />

        <property
            name="isreturned"
            type="boolean"
            update="true"
            insert="true"
            column="isreturned"
        />

        <property
            name="noofrenews"
            type="int"
            update="true"
            insert="true"
            column="noofrenews"
        />

        <property
            name="duedate"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="duedate"
        />

        <property
            name="totalduedays"
            type="int"
            update="true"
            insert="true"
            column="totalduedays"
        />

        <property
            name="returnto"
            type="java.lang.String"
            update="true"
            insert="true"
            column="returnto"
        />

        <property
            name="issuedate"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="issuedate"
        />

        <property
            name="issueby"
            type="java.lang.String"
            update="true"
            insert="true"
            column="issueby"
        />

        <property
            name="itemid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="itemid"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="username"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Loan.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
