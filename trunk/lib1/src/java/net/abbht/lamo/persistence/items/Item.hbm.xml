<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="net.abbht.lamo.persistence.items.Item"
        table="ITEM"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Item.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="itemid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="itemid"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="itemtype"
            type="java.lang.String"
            update="true"
            insert="true"
            column="itemtype"
        />

        <property
            name="yearofissue"
            type="int"
            update="true"
            insert="true"
            column="yearofissue"
        />

        <property
            name="groupname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="groupname"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="status"
            type="java.lang.String"
            update="true"
            insert="true"
            column="status"
        />

        <property
            name="dateofissue"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="dateofissue"
        />

        <property
            name="isbn"
            type="java.lang.String"
            update="true"
            insert="true"
            column="isbn"
        />

        <property
            name="publisher"
            type="java.lang.String"
            update="true"
            insert="true"
            column="publisher"
        />

        <property
            name="edition"
            type="java.lang.String"
            update="true"
            insert="true"
            column="edition"
        />

        <property
            name="location"
            type="java.lang.String"
            update="true"
            insert="true"
            column="location"
        />

        <property
            name="cost"
            type="double"
            update="true"
            insert="true"
            column="cost"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Item.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
