<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="net.abbht.lamo.persistence.users.User"
        table="USER"
    >

        <id
            name="id"
            column="id"
            type="long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-User.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="campus"
            type="java.lang.String"
            update="true"
            insert="true"
            column="campus"
        />

        <property
            name="department"
            type="java.lang.String"
            update="true"
            insert="true"
            column="department"
        />

        <property
            name="password"
            type="java.lang.String"
            update="true"
            insert="true"
            column="password"
        />

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            column="type"
        />

        <property
            name="firstname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="firstname"
        />

        <property
            name="totalduedays"
            type="int"
            update="true"
            insert="true"
            column="totalduedays"
        />

        <property
            name="middlename"
            type="java.lang.String"
            update="true"
            insert="true"
            column="middlename"
        />

        <property
            name="groupname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="groupname"
        />

        <property
            name="dob"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="dob"
        />

        <property
            name="dateofjoin"
            type="java.sql.Date"
            update="true"
            insert="true"
            column="dateofjoin"
        />

        <property
            name="lastname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="lastname"
        />

        <property
            name="motherName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="motherName"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="email"
        />

        <property
            name="sex"
            type="java.lang.String"
            update="true"
            insert="true"
            column="sex"
        />

        <property
            name="favouriteColor"
            type="java.lang.String"
            update="true"
            insert="true"
            column="favouriteColor"
        />

        <property
            name="favouriteBook"
            type="java.lang.String"
            update="true"
            insert="true"
            column="favouriteBook"
        />

        <property
            name="favouritePlace"
            type="java.lang.String"
            update="true"
            insert="true"
            column="favouritePlace"
        />

        <property
            name="passwordEncrypted"
            type="boolean"
            update="true"
            insert="true"
            column="passwordEncrypted"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="username"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
